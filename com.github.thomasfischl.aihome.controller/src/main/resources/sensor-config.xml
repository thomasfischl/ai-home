<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Sensor C -->
  <bean id="sensorC" class="com.github.thomasfischl.aihome.controller.sensor.GPIOSensorAdaptor">
    <property name="name" value="SensorC" />
    <property name="type" value="Bool" />
    <property name="channel" ref="sensorReaderChannel" />
    <property name="schedulePeriod" value="1000" />
  </bean>

  <!-- Sensor D -->
  <bean id="sensorD" class="com.github.thomasfischl.aihome.controller.sensor.GPIOSensorAdaptor">
    <property name="name" value="SensorD" />
    <property name="type" value="Bool" />
    <property name="channel" ref="sensorReaderChannel" />
    <property name="schedulePeriod" value="1000" />
  </bean>

  <!-- Sensor E -->
  <bean id="sensorE" class="com.github.thomasfischl.aihome.controller.sensor.GPIOSensorAdaptor">
    <property name="name" value="SensorE" />
    <property name="type" value="Bool" />
    <property name="channel" ref="sensorReaderChannel" />
    <property name="schedulePeriod" value="1000" />
  </bean>

</beans>
